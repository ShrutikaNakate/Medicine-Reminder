<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/regis"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration Form"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/usernm"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/outline_account_circle_24"
        android:hint="Username"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/border"
        android:drawableLeft="@android:drawable/ic_dialog_email"
        android:hint="Enter Email Address "
        android:padding="10dp"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/border"
        android:hint="Password"
        android:drawableLeft="@drawable/baseline_security"
        android:padding="10dp"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/confirm_pass"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/baseline_security"
        android:hint="Confirm Password"
        android:textColorHint="@color/black"/>
    <EditText
        android:id="@+id/phone"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/border"
        android:hint="ðŸ“žPhone Number"
        android:padding="10dp"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/date_Birth"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:hint="Date of Birth"
        android:background="@drawable/border"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="ðŸ“Address"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:textColorHint="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:background="@drawable/border"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textSize="17sp"
        android:text="@string/gender"/>

    <RadioGroup
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Male"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Female"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Other"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </RadioGroup>
    </LinearLayout>
    <Button
        android:id="@+id/submit_btn"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="20dp"
        android:backgroundTint="#189CFF"/>

</LinearLayout>