<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent fill -->
            <stroke android:width="2dp" android:color="@color/black"/> <!-- Green border -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Gradient background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#80E0F7FA"
                android:endColor="#80B2EBF2"
                android:angle="90"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

</layer-list>
